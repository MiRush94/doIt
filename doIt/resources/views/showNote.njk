{% extends "layout"%}
{% block content %}
<div id="wrapper">
    <div class="container">
        {% if not currentUser %}
        <div class="text-center"><h1>Please login to get started</h1></div>
        {% else %}
        <div class="col-xs-12">
            <h2> Note name : {{note.name}} </h2>
            <h3>Note content</h3>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <pre rows="10" style="min-height:150px; max-height:150px; overflow-y:scroll;">{{note.content}}</pre>
        </div>
        <div class="col-xs-12">
            <a href="/editNote/{{note.id}}"><button class="btn btn-info text-center" style="min-width:10%;">
                <i class="glyphicon glyphicon-edit" style="padding-right:10px;"></i>Edit</button></a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}