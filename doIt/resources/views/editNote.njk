{% extends "layout"%}
{% block content %}
<div id="wrapper">
    <div class="container">
        {% if not currentUser %}
        <div class="text-center"><h1>Please login to get started</h1></div>
        {% else %}
        <h2> Edit Note </h2>
            {% if note.user_id == currentUser.id %}
            <form class="form-horizontal" action="" role="form" method="POST">
                {{ csrfField }}
                <fieldset>
                    <div class="form-group">
                        <label for="name"  class="col-lg-2 control-label">Note Name <i style="color:red">*</i></label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Note name" value="{{note.name}}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="content" class="col-lg-2 control-label">Content  <i style="color:red">*</i></label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="10" id="content" name="content" required>{{note.content}}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a href="/notes"><input type="button" class="btn btn-default" value="Cancel"/></a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </fieldset>
            </form>
            {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}