{% extends "layout" %}

{% block content %}
<div class="container">
    {% if not currentUser %}
    <div class="row">
        <p>Please login to get started</p>
    </div>
    {% else %}
    <div class="row">
        {% for note in notes %}
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">{{ note.name }}</div>

                    <!-- List group -->
                    <div class="panel-body" style="max-height:150px; min-height:150px; overflow-y: scroll;">
                        {{ note.content }}
                    </div>
                    <div class="panel-footer">
                        <!--<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">-->
                            <!--<div class="btn-group">-->
                                <button type="submit" class="btn btn-danger">Delete<i class="glyphicon glyphicon-trash" style="padding-left:10px"></i></button>
                                <button type="submit" class="btn btn-info pull-right">Edit<i class="glyphicon glyphicon-pencil" style="padding-left:10px"></i></button>
                            <!--</div>-->
                        <!--</div>-->
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
</div>

{% endblock %}